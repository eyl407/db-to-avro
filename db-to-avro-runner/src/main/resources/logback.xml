<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
      <pattern>%highlight(%-5level) %d{yyyy-MM-dd'T'HH:mm:ss.SSS} %yellow([%thread]) %blue(%logger{36}\(%file:%line\)) %X{userId} %X{windowId} %X{requestId} %msg %xEx%n</pattern>
    </encoder>
  </appender>

  <logger name="com.github.susom.database" level="info" />
  <logger name="com.github.susom.starr.db_to_avro" level="debug" />

  <root level="warn">
    <appender-ref ref="STDOUT"/>
  </root>

</configuration>